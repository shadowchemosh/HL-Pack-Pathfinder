  <thing id="cDmhImpA1" name="Improved Least Dragonmark" description="Beginning at 2nd level, a dragonmark heir gains improved mastery of her least dragonmark. She can select a second spell-like ability associated with the least dragonmark for her house, or she can use the least dragonmark spell-like ability she already possesses one additional time per day." compset="ClSpecial">
    <fieldval field="usrCandid1" value="thingid.zS22ndSp|thingid.zS2AddUse"/>
    <tag group="ChooseSrc1" tag="Thing"/>
    <eval phase="PostLevel" priority="10000"><![CDATA[
      ~ If we're not shown, just get out now
      doneif (tagis[Helper.ShowSpec] = 0)
      ~if we've been replaced, get out now
      doneif (tagis[Helper.SpcReplace] <> 0)
      ~ If we don't have least feat get out now
      doneif (hero.childlives[fS2DragLea] = 0)
      ~ If we have not chosen then get out now
      doneif (field[usrChosen1].ischosen <> 1)

      var config as string
      ~ Get the configuators thingid tag
      config = hero.child[fS2DragLea].field[usrChosen1].chosen.tagids[thingid.?,"|"]

      ~ If Additional Use selected
      If (field[usrChosen1].chosen.tagis[thingid.zS2AddUse] <> 0) Then
         ~ Increase the number of uses per day of the Least dragonmark
         foreach pick in hero from BaseSpell where "Dragonmark.Least"
            eachpick.field[trkMax].value += 1
         nexteach
      Endif

      ~ If Additional Spell-like ability selected
      If (field[usrChosen1].chosen.tagis[thingid.zS22ndSp] <> 0) Then
         ~ Increase the number Least dragonmarks that can be selected by 1
         hero.firstchild[config].field[cfgMax1].value += 1
      Endif]]></eval>
    </thing>
