  <thing id="cMPSGGIAAn" name="Improved Aid Another" description="{b}Benefit{/b}: The bonus granted by a sensitive when successfully performing an aid another action increases by +2." compset="CustomSpec" summary="Aid another action increases by +2" uniqueness="unique">
