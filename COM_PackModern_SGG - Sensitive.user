    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="ProductId" tag="HLCOMRGGam"/>
    </thing>
  <thing id="cMPSGGLtSp" name="Light Sleeper" description="{b}Benefit{/b}: The sensitive is a light sleeper and can make Perception checks even while distracted or asleep, without penalty. \n\n{b}Normal{/b}: A sleeping character normally takes a -10 penalty on Perception checks, a distracted character -5." compset="CustomSpec" summary="Perception checks even while distracted or asleep, without penalty" uniqueness="unique">
    <comment/>
