    <tag group="AbilType" tag="Extra"/>
    <tag group="Helper" tag="Secondary"/>
    <tag group="SpecSource" tag="arMHInvest"/>
    <tag group="SpecSource" tag="arRogInves"/>
    </thing>
  <thing id="cMPSGGEnyK" name="Encyclopedic Knowledge" description="The investigator has a vast store of knowledge, which she is constantly expanding and refining. She gains a bonus to all Knowledge checks equal to half her investigator level." compset="CustomSpec" uniqueness="useronce">
    <comment>Anachronistic Adventurers - The Investigator

Super Genius Games
www.supergeniusgames.com</comment>
    <usesource source="MPRGGAnac"/>
    <tag group="AbilType" tag="Extra"/>
    <tag group="Helper" tag="Secondary"/>
    <tag group="SpecSource" tag="arMHInvest"/>
    <tag group="Helper" tag="SpecUp"/>
    <tag group="SpecSource" tag="arRogInves"/>
    <eval phase="PostLevel" priority="10000" index="2"><![CDATA[
      ~our bonus is level /2
      var bonus as number
      foreach pick in hero from BaseSkill where "Helper.SkCatKnow"
      bonus = field[xTotalLev].value / 2
      eachpick.field[Bonus].value += maximum(round(bonus,0,-1),1)
      perform eachpick.delete[Helper.TrainOnly]
      nexteach]]></eval>
    <eval phase="PostLevel" priority="5000"><![CDATA[      ~ If we're not shown, just get out now
      doneif (tagis[Helper.ShowSpec] = 0)

      ~our bonus is level /2, min 1
      var bonus as number
      bonus = field[xTotalLev].value / 2
      field[abValue].value += maximum(round(bonus,0,-1),1)
      field[livename].text = field[thingname].text & " +" & field[abValue].value
      field[abSumm].text = "Your Encyclopedic Knowledge Bonus is +" & field[abValue].value]]></eval>
    </thing>
  <thing id="cMPSGGExpe" name="Expert" description="A number of times per day equal to 3 + their Int modifier, the investigator may roll two d20s when making a skill check, using the best value of the two dice to determine their check’s result.\n\nHowever, the investigator may only use this ability with those skills they gains a bonus to from a feat or ability; such as Skill Focus or Deceitful.\n\nThe investigator’s keen mind and analytical skills allow them to become a great expert in any field to which they particularly apply themselves, enabling them to outperform even those with the same amount of knowledge and training they possess." compset="CustomSpec" summary="Roll two D20s when making a skill check with a focused skill" uniqueness="useronce">
    <comment>Anachronistic Adventurers - The Investigator

Super Genius Games
www.supergeniusgames.com</comment>
