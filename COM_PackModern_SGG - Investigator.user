    <eval phase="First">perform hero.child[skHeal].assign[SkillOver.aINT]
perform hero.child[skPercep].assign[SkillOver.aINT]
perform hero.child[skSenseMot].assign[SkillOver.aINT]
perform hero.child[skSurvival].assign[SkillOver.aINT]
perform hero.child[skMSRDGamb].assign[SkillOver.aINT]</eval>
    <eval phase="PostAttr" priority="10000" index="2"><![CDATA[field[livename].text = field[thingname].text & " (+2 when taking 20)"]]></eval>
    </thing>
