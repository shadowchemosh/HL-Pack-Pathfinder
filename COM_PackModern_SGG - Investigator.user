    <tag group="SpecType" tag="Defense"/>
    </thing>
  <thing id="cMPSGGCyMn" name="Canny Maneuvers" description="The investigator is able to use her experience and intellect to perform combat maneuvers, rather than depend on physical ability or combat training. \n\nShe may use Int to replace Str and Wis to replace Dex to calculate her CMB and CMD." compset="CustomSpec" uniqueness="useronce">
    <comment>Anachronistic Adventurers - The Investigator

Super Genius Games
www.supergeniusgames.com</comment>
    <usesource source="MPRGGAnac"/>
    <tag group="AbilType" tag="Extra"/>
    <tag group="Helper" tag="Secondary"/>
    <tag group="SpecSource" tag="arMHInvest"/>
    <tag group="Helper" tag="SpecUp"/>
    <tag group="SpecType" tag="Movement"/>
    <tag group="SpecSource" tag="arRogInves"/>
    <eval phase="PostAttr" priority="10000">~ Add our wisdom bonus to the combat maneuver bonus
 hero.child[Maneuver].field[tCMD].value += hero.child[aWIS].field[aModBonus].value - hero.child[aDEX].field[aModBonus].value</eval>
    <eval phase="PostAttr" priority="10500" index="2">~ Add our int bonus to the combat maneuver bonus
 hero.child[Maneuver].field[tCMB].value += hero.child[aINT].field[aModBonus].value - hero.child[aSTR].field[aModBonus].value</eval>
    <eval phase="PostAttr" priority="10750" index="3">~ Add our int bonus to the combat maneuver bonus
 hero.child[Maneuver].field[tCMD].value += hero.child[aINT].field[aModBonus].value - hero.child[aSTR].field[aModBonus].value</eval>
    </thing>
  <thing id="cMPSGGCySt" name="Canny Strikes" description="The investigator is able to use her experience and intellect to hit her foes, rather than depend on strong or swift weapon blows. \n\nWhen making an attack, the investigator may add her Int modifier to her attack rolls rather than Str or Dex." compset="CustomSpec" uniqueness="useronce">
    <comment>Anachronistic Adventurers - The Investigator

Super Genius Games
www.supergeniusgames.com</comment>
    <usesource source="MPRGGAnac"/>
    <tag group="AbilType" tag="Extra"/>
    <tag group="Helper" tag="Secondary"/>
    <tag group="SpecSource" tag="arMHInvest"/>
    <tag group="SpecType" tag="Attack"/>
    <eval phase="PostAttr" priority="10000">~ Add our int bonus to the melee attack bonus
 hero.child[Attack].field[tAtkMelee].value = hero.child[Attack].field[tAtkMelee].value + hero.child[aINT].field[aModBonus].value</eval>
    <eval phase="PostAttr" priority="10000" index="2">~ Add our int bonus to the ranged attack bonus
 hero.child[Attack].field[tAtkRanged].value = hero.child[Attack].field[tAtkRanged].value + hero.child[aINT].field[aModBonus].value</eval>
    </thing>
