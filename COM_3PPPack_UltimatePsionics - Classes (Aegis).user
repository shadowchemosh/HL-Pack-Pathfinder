    <comment>S2Array = Points per level; abValue = Suit Level; abValue2 = Bonus/Penalty points; abValue3 = Configurable points.</comment>
    <arrayval field="S2Array" index="0" value="3"/>
    <arrayval field="S2Array" index="1" value="4"/>
